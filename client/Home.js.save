export default class Home extends React.Component {
    constructor(props) {
        super(props);
        this.state = {cities: []};
        this.loadData();
    }
    loadData() {
        fetch('/cities')
            .then(res => res.json())
            .then(data => this.setState({cities: data}))
            .catch(err => console.log(err));
    }
    render() {
      if (this.state.cities.length == 0){
        return(<p>LoadingCities</p>);
      }
        return (
            <div>
                <Header />
                <Banner />
                <Triptique text="Discover a road to castles" />
                <Triptique text="What goes around ?" />
                <TriptiqueEvent text="What is planned ?" />
                <Footer />
            </div>
        );
    }
}

